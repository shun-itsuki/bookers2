
<h1>Book detail</h1>

<%= form_for(@book) do |f| %>

<h4>title</h4>
 <%= f.text_field :book_name , class:"book_title" %>
<h4>opinion</h4>
 <%= f.text_area :caption , class:"book_body" %>
<br><%= f.submit 'update book' %></br>
<% end %>

<%= link_to "show" , book_path(@book.id), class:"show_#{@book.id}" %>
<%= link_to 'back', books_path, class:"back" %>
