<!-- マイページ用 -->
<h2>User Info</h2>
<h4><%= attachment_image_tag user, :user_image, :fill, 80, 80, format: 'jpeg' %></h4>
<h4>name:<%= user.name %></h4>
<h4>introduction:<%= user.introduction %></h4>

 <%= link_to "edit", edit_user_path(user.id), class:"edit_user_#{user.id}" %>


<!-- 本送信用 -->
<h2>New Book</h2>
<%= form_for(book) do |f| %>
<h4>title</h4>
<%= f.text_field :book_name , class:"book_title" %>
<h4>option</h4>
<%= f.text_area :caption , class:"book_body"%>

 <br><%= f.submit "create book" %></br>

<% if book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<% end %>
