<h1>User Info</h1>

<%= form_for(@user) do |f| %>

<h4>title</h4>
 <%= f.text_field :name , class:"name" %>

<h4>image</h4>
 <%= f.attachment_field :user_image , class: "user_image" %>

<h4>introduction</h4>
 <%= f.text_field :introduction , class:"user_introduction" %>

 <% if @user.errors.any? %>
   <div id="error_explanation" class="alert alert-danger">
     <ul>
       <% @user.errors.full_messages.each do |message| %>
         <li><%= message %></li>
       <% end %>
     </ul>
   </div>
 <% end %>

<br><%= f.submit 'update User' %></br>
<% end %>
