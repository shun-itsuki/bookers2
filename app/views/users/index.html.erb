<h1>Users</h1>

<table>

  <tr>
    <th>image</th>
    <th>name</th>
  </tr>

  <tr>
    <% @users.each do |user| %>
    <td><%= attachment_image_tag user, :user_image, :fill, 30, 30, format: 'jpeg' %></td>
    <td><%= user.name %></td>
    <td><%= link_to "show", user_path(user.id), class: "user_path_#{user.id}" %><td>
  </tr>
    <% end %>
</table>

<!-- 部分テンプレート (マイページ、送信フォーム) -->
<%= render'users/list',user:@user,book:@book %>
